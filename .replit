entrypoint = "app.py"
modules = ["python-3.12"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["python3", "app.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run Flask App"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 app.py"

[[ports]]
localPort = 5000
externalPort = 80
